<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!--TRIBAL FACTIONS-->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]/caravanTraderKinds</xpath>
		<value>
			<li>MLRP_PlushieTrader</li>
		</value>
	</Operation>

	<!--OUTLANDER FACTIONS-->
	<Operation Class="PatchOperationAdd">
	    <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/caravanTraderKinds</xpath>
	    <value>
	        <li>MLRP_PlushieTrader</li>
	    </value>
	</Operation>
	
	<!--IMPERIAL FACTIONS-->
	<Operation Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty">
		<xpath>/Defs/FactionDef[defName="Empire"]/caravanTraderKinds</xpath>
		<value>
			<li>MLRP_PlushieTrader</li>
		</value>
	</Operation>
	
	<!--NPC BRONY FACTION-->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[defName="MLRP_NPC_Faction"]/caravanTraderKinds</xpath>
		<value>
			<li>MLRP_PlushieTrader</li>
		</value>
	</Operation>

</Patch>