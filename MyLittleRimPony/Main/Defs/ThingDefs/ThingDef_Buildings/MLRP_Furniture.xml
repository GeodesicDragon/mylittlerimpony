  <ThingDef Abstract="True" Name="MLRP_LampBase" ParentName="BuildingBase">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>14</pathCost>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <designationCategory>MLRP_Buildings</designationCategory>
    <rotatable>false</rotatable>
    <uiIconOffset>(0, 0.03)</uiIconOffset>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
      <Flammability>1</Flammability>
    </statBases>
  </ThingDef>

  <ThingDef Abstract="True" Name="DiscordLampBase" ParentName="MLRP_LampBase">
    <graphicData>
      <texPath>Things/Building/DiscordLamp</texPath>
	  <drawSize>(1,1)</drawSize>
    </graphicData>
    <costStuffCount>300</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <Mass>4</Mass>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
    </statBases>
	<designationHotKey>Misc10</designationHotKey>
  </ThingDef>
  
  <ThingDef ParentName="DiscordLampBase" >
    <defName>MLRP_DiscordLamp</defName>
    <label>Discord lamp</label>
    <description>It's a lamp that looks like Discord, what else is there to say?\n\nIt doesn't provide much in the way of light, but it doesn't require any power and will continue operating during solar flares.\n\nThis one glows with a standard white light.</description>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(255,255,255,0)</glowColor>
      </li>
    </comps>
  </ThingDef>
  
