    <graphicData>
      <texPath>Things/PonyPlush/CutieMarkCrusaders</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>600</MarketValue>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>1.0</Mass>
      <Flammability>1</Flammability>
      <EquipDelay>0.5</EquipDelay>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <equippedStatOffsets>
		<ImmunityGainSpeedFactor>0.5</ImmunityGainSpeedFactor>
		<InjuryHealingFactor>0.5</InjuryHealingFactor>
		<CookSpeed>20</CookSpeed>
		<FoodPoisonChance>-0.25</FoodPoisonChance>
    </equippedStatOffsets>
    <costStuffCount>900</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
  </ThingDef>

</Defs>