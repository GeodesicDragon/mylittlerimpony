<Defs>

	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>MLRP_HerbalCureKit_CureFlu</defName>
		<label>cure flu</label>
		<description>Use a herbal cure kit to cure a patient of the flu.</description>
		<workAmount>600</workAmount>
		<descriptionHyperlinks>
			<ThingDef>MLRP_PoisonJokeAddictionCureKit</ThingDef>
			<HediffDef>Flu</HediffDef>
		</descriptionHyperlinks>
		<jobString>Using herbal cure kit</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MLRP_PoisonJokeAddictionCureKit</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MLRP_PoisonJokeAddictionCureKit</li>
			</thingDefs>
		</fixedIngredientFilter>
		<removesHediff>Flu</removesHediff>
		<successfullyRemovedHediffMessage>{0} has successfully cured {1} of the flu.</successfullyRemovedHediffMessage>
		<researchPrerequisite>MLRP_CurePoisonJokeAddictionResearch</researchPrerequisite>
	</RecipeDef>
	
