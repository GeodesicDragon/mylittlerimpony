<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="ChristmasTree"]/label</xpath>
				<value>
					<label>Hearth's Warming tree</label>
				</value>
			</li>
	
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="ChristmasTree"]/description</xpath>
				<value>
					<description>A celebratory tree decorated with ornaments and lights traditionally made as part of Hearth's Warming celebrations.</description>
				</value>
			</li>
		</operations>
	</Operation>
	
</Patch>