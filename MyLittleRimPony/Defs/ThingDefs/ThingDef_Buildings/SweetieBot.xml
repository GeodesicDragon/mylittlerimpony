<Defs>

  <ThingDef ParentName="BaseWeaponTurret">
    <defName>MLRP_SweetieBotTurret</defName>
    <label>Sweetie Bot turret</label>
    <description>Sweetie Bot *is* the turret.</description>
    <graphicData>
      <texPath>Things/PonyPlush/PlushEquipped</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.3</AccuracyTouch>
      <AccuracyShort>0.4</AccuracyShort>
      <AccuracyMedium>0.8</AccuracyMedium>
      <AccuracyLong>0.8</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
      <Flammability>0</Flammability>
	  <MarketValue>2500</MarketValue>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>Projectile_HarmonyRainbow</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>40</range>
        <ticksBetweenBurstShots>30</ticksBetweenBurstShots>
        <burstShotCount>5</burstShotCount>
        <soundCast>MLRP_EOH_Fire</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
  </ThingDef>

<ThingDef ParentName="BuildingBase">
    <defName>MLRP_Turret_SweetieBot</defName>
    <label>Sweetie Bot</label>
    <description>"If this world isn't going to love me, I'll teach it to FEAR ME instead." - Sweetie Bot</description>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/SweetieBot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.27,0.25,0.27)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/SweetieBot</uiIconPath>
    <uiIconScale>0.90</uiIconScale>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>2400</WorkToBuild>
      <Mass>8</Mass>
      <Beauty>-10</Beauty>
      <ShootingAccuracyTurret>0.80</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>300</wickTicks>
        <explosiveRadius>6</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.7</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Combat effectiveness</fuelLabel>
        <fuelGizmoLabel>Combat effectiveness (%)</fuelGizmoLabel>
        <outOfFuelMessage>ERROR: Repairs needed</outOfFuelMessage>
        <fuelFilter><thingDefs><li>Steel</li></thingDefs></fuelFilter>
        <fuelCapacity>100</fuelCapacity>
        <fuelMultiplier>0.8</fuelMultiplier>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.3</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <fuelIconPath>Things/Building/SweetieBot</fuelIconPath>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <costList>
      <Cloth>300</Cloth>
      <ComponentIndustrial>2</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>50</Plasteel>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <constructionSkillPrerequisite>15</constructionSkillPrerequisite>
    <building>
      <combatPower>45</combatPower>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>MLRP_SweetieBotTurret</turretGunDef>
      <turretBurstCooldownTime>1.5</turretBurstCooldownTime>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>MLRP_WeaponisedElementsResearch</li>
    </researchPrerequisites>
  </ThingDef>
 
</Defs>