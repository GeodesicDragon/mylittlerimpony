<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="PonyPlushBase">
    <thingClass>Apparel</thingClass>
    <defName>PonyPlush_CutieMarkCrusaders</defName>
    <label>Cutie Mark Crusaders</label>
    <description>Otherwise known as 'The Three Filly Wrecking Crew Of Ponyville.'\n\nCarrying them makes you feel as though they are supporting and guiding you, even though you can't get a cutie mark of your own.</description>
    <techLevel>Industrial</techLevel>
    <!--<recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>PlushieBench</li>
      </recipeUsers>
      <soundWorking>Recipe_Tailor</soundWorking>
    </recipeMaker>-->
    <graphicData>
      <texPath>Things/PonyPlush/CutieMarkCrusaders</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>900</MarketValue>
      <!--<WorkToMake>9000</WorkToMake>-->
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1.0</Mass>
      <Flammability>1</Flammability>
      <EquipDelay>0.1</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<ImmunityGainSpeedFactor>0.5</ImmunityGainSpeedFactor>
		<InjuryHealingFactor>0.5</InjuryHealingFactor>
		<CookSpeed>20</CookSpeed>
		<FoodPoisonChance>-0.05</FoodPoisonChance>
    </equippedStatOffsets>
    <thingCategories>
      <li>Pony_Plushies</li>
    </thingCategories>
    <!--<costList>
      <PonyPlush_AppleBloom>1</PonyPlush_AppleBloom>
      <PonyPlush_Scootaloo>1</PonyPlush_Scootaloo>
      <PonyPlush_SweetieBelle>1</PonyPlush_SweetieBelle>
    </costList>-->
    <apparel>
  <careIfWornByCorpse>true</careIfWornByCorpse>
  <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <wornGraphicPath>Things/PonyPlush/PlushEquipped</wornGraphicPath>
      <layers>
        <li>Belt</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
    <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
  </ThingDef>

  <!--MAKE USING PLUSHIES-->
  
  <RecipeDef>
    <defName>MLRP_MakeCMC_Plushies</defName>
    <label>make Cutie Mark Crusaders</label>
    <description>Create the Cutie Mark Crusaders using one of each CMC plush.</description>
    <jobString>Making Elements of Harmony.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>9000</workAmount>
	<recipeUsers>
		<li>PlushieBench</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PonyPlush_AppleBloom</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>PonyPlush_Scootaloo</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>PonyPlush_SweetieBelle</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <PonyPlush_CutieMarkCrusaders>1</PonyPlush_CutieMarkCrusaders>
    </products>
  </RecipeDef>
  
	<!--MAKE USING CLOTH-->
	
  <RecipeDef>
    <defName>MLRP_MakeCMC_Cloth</defName>
    <label>make Cutie Mark Crusaders (alt.)</label>
    <description>Create the Cutie Mark Crusaders using just cloth.</description>
    <jobString>Making Elements of Harmony.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>9000</workAmount>
	<recipeUsers>
		<li>PlushieBench</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Cloth</li>
          </thingDefs>
        </filter>
        <count>900</count>
      </li>
    </ingredients>
    <products>
      <PonyPlush_CutieMarkCrusaders>1</PonyPlush_CutieMarkCrusaders>
    </products>
  </RecipeDef>

</Defs>