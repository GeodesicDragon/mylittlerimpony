<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <ThingDef ParentName="PonyPlushBase">
    <thingClass>Apparel</thingClass>
    <defName>PonyPlush_SweetieBelle</defName>
    <label>Sweetie Belle</label>
    <description>Sweetie Belle is, as her name implies, very sweet; unfortunately, the same cannot be said for her cooking.\n\nCarrying her reminds you of her culinary disasters, but at least the memories make you more confident in your own cooking ability.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>PlushieBench</li>
      </recipeUsers>
      <soundWorking>Recipe_Tailor</soundWorking>
    </recipeMaker>
    <graphicData>
      <texPath>Things/PonyPlush/SweetieBelle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>200</MarketValue>
      <WorkToMake>6000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1.0</Mass>
      <Flammability>1</Flammability>
      <EquipDelay>0.1</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Pony_Plushies</li>
    </thingCategories>
    <costList>
      <Cloth>300</Cloth>
    </costList>
    <apparel>
  <careIfWornByCorpse>true</careIfWornByCorpse>
  <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <wornGraphicPath>Things/PonyPlush/PlushEquipped</wornGraphicPath>
      <layers>
        <li>Belt</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
    <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
    <comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>MLRP_SweetieBellePlush</hediff>
        <part>Waist</part>
      </li>
    </comps>
  </ThingDef>
  
	<HediffDef>
		<defName>MLRP_SweetieBellePlush</defName>
		<label>Sweetie Belle plush</label>
		<description>You are constantly thinking about Sweetie Belle's culinary disasters, but at least you're feeling more confident in your own cooking abilities.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<stages>
		<li>
			<statOffsets>
				<CookSpeed>20</CookSpeed>
				<FoodPoisonChance>-0.05</FoodPoisonChance>
			</statOffsets>
		</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_RemoveIfApparelDropped" />
		</comps>
	<isBad>false</isBad>
  </HediffDef>
  
  <ThoughtDef>
    <defName>MLRP_SweetieBellePlush</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MLRP_SweetieBellePlush</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Memories of Sweetie Belle cooking</label>
        <description>Seriously, how on Equestria did she manage to burn JUICE?!</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>