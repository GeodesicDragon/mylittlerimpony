<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PonyPlushBase">
    <thingClass>Apparel</thingClass>
    <defName>PonyPlush_IzzyMoonbow</defName>
    <label>Izzy Moonbow</label>
    <description>Izzy Moonbow is a lively unicorn who is very keen to make new friends in new places.\n\nCarrying her makes you feel a bit happier, as well as more welcoming towards others.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>PlushieBench</li>
      </recipeUsers>
      <soundWorking>Recipe_Tailor</soundWorking>
    </recipeMaker>
    <graphicData>
      <texPath>Things/PonyPlush/IzzyMoonbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>200</MarketValue>
      <WorkToMake>6000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1.0</Mass>
      <Flammability>1</Flammability>
      <EquipDelay>0.1</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Pony_Plushies</li>
    </thingCategories>
    <costList>
      <Cloth>300</Cloth>
    </costList>
    <apparel>
  <careIfWornByCorpse>true</careIfWornByCorpse>
  <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <wornGraphicPath>Things/PonyPlush/PlushEquipped</wornGraphicPath>
      <layers>
        <li>Belt</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
    <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
    <comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>MLRP_IzzyPlush</hediff>
        <part>Waist</part>
      </li>
    </comps>
  </ThingDef>
  
	<HediffDef>
		<defName>MLRP_IzzyPlush</defName>
		<label>Izzy Moonbow plush</label>
		<description>You feel happier, as well as more appreciate of others.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<stages>
			<li>
				<opinionOfOthersFactor>0.1</opinionOfOthersFactor>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_RemoveIfApparelDropped" />
		</comps>
	<isBad>false</isBad>
  </HediffDef>
  
  <ThoughtDef>
    <defName>MLRP_IzzyPlush</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MLRP_IzzyPlush</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Izzy Moonbow plush</label>
        <description>Izzy's smile is infectious.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>