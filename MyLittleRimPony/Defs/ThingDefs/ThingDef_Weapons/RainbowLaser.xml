<Defs>

<!--BASES-->

<ThingDef Name="BaseProjectileHarmony" Abstract="True">
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Bullet</thingClass>
    <label>rainbow</label>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <shaderType>Transparent</shaderType>
    </graphicData>
  </ThingDef>
  
  <ThingDef Name="BaseMLRPMakeableGun" ParentName="BaseGunWithQuality" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>PlushieBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
      <researchPrerequisite>MLRP_WeaponisedElementsResearch</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="BaseHumanMakeableMLRPGun" ParentName="BaseMLRPMakeableGun" Abstract="True">
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
  </ThingDef>
  
<!--PROJECTILE-->
  
    <ThingDef ParentName="BaseProjectileHarmony">
    <defName>Projectile_HarmonyRainbow</defName>
    <label>rainbow laser</label>
    <graphicData>
      <texPath>Things/Projectiles/RainbowLaser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>22</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>30</speed>
    </projectile>
  </ThingDef>
  
<!--WEAPON-->

    <ThingDef ParentName="BaseHumanMakeableMLRPGun">
    <defName>MLRP_ElementsOfHarmonyWeaponised</defName>
    <label>Rainbow Laser</label>
    <description>This version of the Elements of Harmony tends to put more emphasis on the 'harm' part.</description>
    <graphicData>
      <texPath>Things/ElementsOfHarmony</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1,1)</drawSize>
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <soundInteract>Standard_Pickup</soundInteract>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
	<relicChance>0</relicChance>
    <statBases>
	  <MarketValue>1500</MarketValue>
      <WorkToMake>900</WorkToMake>
      <Mass>2</Mass>
      <AccuracyTouch>0.2</AccuracyTouch>
      <AccuracyShort>0.35</AccuracyShort>
      <AccuracyMedium>0.7</AccuracyMedium>
      <AccuracyLong>0.8</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <costList>
      <MLRP_ElementsOfHarmony>1</MLRP_ElementsOfHarmony>
	  <Plasteel>100</Plasteel>
	  <ComponentSpacer>3</ComponentSpacer>
	  <Gold>5</Gold>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
	<!--<researchPrerequisites>
      <li>MLRP_WeaponisedElementsResearch</li>
    </researchPrerequisites>-->
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Projectile_HarmonyRainbow</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <range>30</range>
		<burstShotCount>3</burstShotCount>
        <soundCast>MLRP_EOH_Fire</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>elements</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
 </Defs>