        <categoryDef>PlantFoodRaw</categoryDef>
        <thingDefCountRange>1~10</thingDefCountRange>
        <totalPriceRange>1500~2500</totalPriceRange>
      </li>
           
      <!-- Apparel -->
      <li Class="StockGenerator_Clothes">
        <countRange>10~10</countRange>
