<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biotech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/ThingDef[defName="MLRP_SweetieBotMech"]</xpath>
					<value>
						<li Class="CombatExtended.RacePropertiesExtensionCE">
							<bodyShape>Vehicle</bodyShape>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="MLRP_SweetieBotMech"]/statBases</xpath>
					<value>
						<AimingAccuracy>1.0</AimingAccuracy>
						<ShootingAccuracyPawn>1.75</ShootingAccuracyPawn>
						<ArmorRating_Blunt>30</ArmorRating_Blunt>
						<ArmorRating_Sharp>45</ArmorRating_Sharp>
					</value>
				</li>
			
			
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MLRP_SweetieBotMech"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
								<label>horn</label>
								<capacities>
									<li>Poke</li>
								</capacities>
								<power>9</power>
								<cooldownTime>2.0</cooldownTime>
								<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
								<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
								<armorPenetrationSharp>2.5</armorPenetrationSharp>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>front left hoof</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>9</power>
								<cooldownTime>2.0</cooldownTime>
								<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
								<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
								<armorPenetrationBlunt>2</armorPenetrationBlunt>
							</li>
							<li Class="CombatExtended.ToolCE">
								<label>front right hoof</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>9</power>
								<cooldownTime>2.0</cooldownTime>
								<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
								<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
								<armorPenetrationBlunt>2</armorPenetrationBlunt>
							</li>
						</tools>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>