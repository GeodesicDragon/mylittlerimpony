    <workAmount>300</workAmount>
	<recipeUsers>
		<li>MLRP_Daybreaker</li>
	</recipeUsers>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Bioferrite</li>
				</thingDefs>
			</filter>
			<count>1333</count>
		</li>
	</ingredients>
	<products>
		<Silver>1000</Silver>
	</products>
</RecipeDef>
 
</Defs>