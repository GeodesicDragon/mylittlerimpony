<Defs>

<!--PURCHASE VACSTONE BLOCKS-->

<RecipeDef ParentName="MLRP_SE_RecipeBase">
	<defName>MLRP_SE_VacstoneBlocks</defName>
	<label>purchase vacstone blocks</label>
	<description>Use silver to purchase 100 vacstone blocks.\n\nA convenience fee of 800 silver will be applied to this transaction.</description>
	<researchPrerequisite>AdvancedGravtech</researchPrerequisite>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Silver</li>
				</thingDefs>
			</filter>
			<count>100</count>
		</li>
	</ingredients>
	<products>
		<BlocksVacstone>100</BlocksVacstone>
	</products>	
</RecipeDef>

<!--SELL VACSTONE BLOCKS-->

<RecipeDef ParentName="MLRP_SE_RecipeBase">
	<defName>MLRP_SE_SellVacstoneBlocks</defName>
	<label>sell vacstone blocks</label>
	<description>Sell 100 vacstone blocks in exchange for silver.\n\nAny convenience fee previously paid will not be refunded.</description>
	<jobString>Selling vacstone blocks</jobString>
	<researchPrerequisite>AdvancedGravtech</researchPrerequisite>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>BlocksVacstone</li>
				</thingDefs>
			</filter>
			<count>100</count>
		</li>
	</ingredients>
	<products>
		<Silver>200</Silver>
	</products>	
</RecipeDef>
  
</Defs>