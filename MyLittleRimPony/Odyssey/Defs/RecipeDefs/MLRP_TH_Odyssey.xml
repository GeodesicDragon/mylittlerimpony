    <workAmount>300</workAmount>
	<recipeUsers>
		<li>MLRP_TreeHugger</li>
	</recipeUsers>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Drug_Psilocap</li>
				</thingDefs>
			</filter>
			<count>100</count>
		</li>
	</ingredients>
	<products>
		<Silver>1000</Silver>
	</products>
</RecipeDef>

</Defs>