<Defs>

<!--CONVERT SILVER TO POISON JOKE-->

<RecipeDef>
	<defName>MLRP_TH_ConvertSilverIntoPsilocap</defName>
	<label>purchase 10 psilocap</label>
	<description>Purchase psilocap mushrooms using silver.</description>
	<researchPrerequisite>DrugProduction</researchPrerequisite>
    <jobString>speaking to Tree Hugger</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>BurnDrug</effectWorking>
    <soundWorking>Ingest_Smoke</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>300</workAmount>
	<recipeUsers>
		<li>MLRP_TreeHugger</li>
	</recipeUsers>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Silver</li>
				</thingDefs>
			</filter>
			<count>10</count>
		</li>
	</ingredients>
	<products>
		<Drug_Psilocap>10</Drug_Psilocap>
	</products>
</RecipeDef>

<!--CONVERT POISON JOKE TO SILVER-->

