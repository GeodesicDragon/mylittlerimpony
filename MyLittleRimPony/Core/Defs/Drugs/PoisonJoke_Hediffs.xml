<Defs>

<!--SIGHT BEYOND SIGHT-->

<HediffDef>
    <defName>MLRP_PoisonJokeSightBeyondSight</defName>
    <label>sight beyond sight</label>
	<hediffClass>HediffWithComps</hediffClass>
    <description>Improved sight for 24 hours, one of the possible side effects of smoking poison joke.</description>
	<comps>
		<li Class="HediffCompProperties_Disappears">
			<disappearsAfterTicks>60000</disappearsAfterTicks>
			<showRemainingTime>true</showRemainingTime>
		</li>
	</comps>
	<stages>
		<li>
			<capMods>
				<li>
					<capacity>Sight</capacity>
					<offset>1</offset>
				</li>
			</capMods>
		</li>
	</stages>
</HediffDef>

