<Defs>

<!--CONVERT SILVER TO WOOD-->

<RecipeDef ParentName="DaybreakerRecipeBase">
	<defName>MLRP_DB_ConvertSilverIntoWood</defName>
	<label>convert silver to wood</label>
	<description>Convert 1000 silver into 833 wood.</description>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Silver</li>
				</thingDefs>
			</filter>
			<count>100</count>
		</li>
	</ingredients>
	<products>
		<WoodLog>833</WoodLog>
	</products>
	<displayPriority>120</displayPriority>
</RecipeDef>

