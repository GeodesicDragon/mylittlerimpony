<!--PURCHASE 500 OF EVERY VANILLA BLOCK-->

<RecipeDef ParentName="MLRP_SE_RecipeBase">
	<defName>MLRP_SE_OneHundredVanillaBlocks</defName> <!--I made a mistake here, but I can't change it because it might cause problems.-->
	<label>purchase 500 of each</label>
	<description>Purchase 500 of everything offered for sale.</description>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>PonyPlush_BigMacintosh</li>
				</thingDefs>
			</filter>
			<count>1</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>PonyPlush_MaudPie</li>
				</thingDefs>
			</filter>
			<count>1</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>PonyPlush_PinkiePie</li>
				</thingDefs>
			</filter>
			<count>1</count>
		</li>
	</ingredients>
	<products>
		<BlocksGranite>500</BlocksGranite>
		<BlocksLimestone>500</BlocksLimestone>
		<BlocksMarble>500</BlocksMarble>
		<BlocksSandstone>500</BlocksSandstone>
		<BlocksSlate>500</BlocksSlate>
	</products>
</RecipeDef>

