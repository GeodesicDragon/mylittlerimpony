<Defs>

<!--CONVERT GOLD TO JADE-->

<RecipeDef ParentName="DaybreakerRecipeBase">
	<defName>MLRP_DB_ConvertGoldIntoJade</defName>
	<label>convert gold to jade</label>
	<description>Convert 100 gold into 200 jade.</description>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Chemfuel</li>
				</thingDefs>
			</filter>
			<count>50</count>
		</li>
		<li>
			<filter>
				<thingDefs>
					<li>Gold</li>
				</thingDefs>
			</filter>
			<count>10</count>
		</li>
	</ingredients>
	<products>
		<Jade>200</Jade>
	</products>
	<displayPriority>0</displayPriority>
</RecipeDef>

