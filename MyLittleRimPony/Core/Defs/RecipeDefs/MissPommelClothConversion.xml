<Defs>

<!--CONVERT CLOTH TO SYNTHREAD-->

<RecipeDef>
	<defName>MLRP_MP_ConvertClothIntoSynthread</defName>
	<label>convert cloth to synthread</label>
	<description>Convert 100 cloth into the market value equivalent of synthread.</description>
    <jobString>Exchanging materials</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>300</workAmount>
	<recipeUsers>
		<li>MLRP_MissPommel</li>
	</recipeUsers>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Cloth</li>
				</thingDefs>
			</filter>
			<count>100</count>
		</li>
	</ingredients>
	<products>
		<Synthread>38</Synthread>
	</products>
</RecipeDef>

