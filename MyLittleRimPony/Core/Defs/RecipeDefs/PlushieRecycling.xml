<Defs>

<RecipeDef>
	<defName>MLRP_RecyclePlushies</defName>
	<label>Recycle plushies</label>
	<description>Recycle a plushie, reclaiming 60% of the cloth used to make it.</description>
	<researchPrerequisite>MLRP_PlushieRecycling</researchPrerequisite>
    <jobString>Recycling plushies</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Tailor</effectWorking>
    <soundWorking>Recipe_Tailor</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>1500</workAmount>
	<recipeUsers>
		<li>PlushieBench</li>
	</recipeUsers>
	<ingredients>
      <li>
        <filter>
          <categories>
            <li>Pony_Plushies</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Pony_Plushies</li>
      </categories>
      <disallowedThingDefs>
        <li>MLRP_ElementsOfHarmony</li>
        <li>PonyPlush_CutieMarkCrusaders</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
	<products>
		<Cloth>180</Cloth>
	</products>
</RecipeDef>

