<Defs>

<!--CONVERT JADE TO STEEL-->

<RecipeDef ParentName="DaybreakerRecipes_RegularChemfuel">
	<defName>MLRP_DB_ConvertJadeIntoSteel</defName>
	<label>convert jade to steel</label>
	<description>Convert 100 jade into the market value equivalent of steel.</description>
    <jobString>Converting materials</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>300</workAmount>
	<recipeUsers>
		<li>MLRP_Daybreaker</li>
	</recipeUsers>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Jade</li>
				</thingDefs>
			</filter>
			<count>100</count>
		</li>
	</ingredients>
	<products>
		<Steel>263</Steel>
	</products>
</RecipeDef>

