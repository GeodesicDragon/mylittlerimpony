<Defs>

<ThingDef ParentName="BuildingBase">
    <defName>MLRP_MissPommel</defName>
    <label>Fabric Exchange</label>
    <description>Miss Pommel will gladly sell you 100 of any material, provided she has it in stock.</description>
    <thingClass>Building_WorkTable</thingClass>
	<!--<designationHotKey>Misc4</designationHotKey>-->
    <graphicData>
      <texPath>Things/Building/MissPommel</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
	<minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
		<li>BuildingsProduction</li>
    </thingCategories>
	<costStuffCount>200</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
      <li>Woody</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>7200</WorkToBuild>
      <MaxHitPoints>250</MaxHitPoints>
      <Flammability>0</Flammability>
      <Mass>25</Mass>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>MLRP_Buildings</designationCategory>
	<uiOrder>60</uiOrder>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
	<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>ComplexClothing</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>false</shortCircuitInRain>
        <basePowerConsumption>150</basePowerConsumption>
        <powerUpgrades>
          <li>
            <researchProject>MLRP_MagicMirrorExtraPowerResearch</researchProject>
            <factor>0.5</factor>
          </li>
        </powerUpgrades>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
  </ThingDef>

</Defs>  