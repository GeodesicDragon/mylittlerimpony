<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--SCREWBALL-->

  <ResearchProjectDef Abstract="True" Name="MLRP_ScrewballBase">
    <baseCost>400</baseCost>
    <techLevel>Industrial</techLevel>
  </ResearchProjectDef>

	<ResearchProjectDef ParentName="MLRP_ScrewballBase">
		<defName>MLRP_ScrewballResearch</defName>
		<label>Screwball generator</label>
		<description>Harness the power of a pony supposedly cursed by the Lord of Chaos for your own needs.</description>
		<prerequisites>
			<li>Electricity</li>
		</prerequisites>
		<tab>MLRP_ResearchTab</tab>
		<researchViewX>0</researchViewX>
		<researchViewY>0</researchViewY>
	</ResearchProjectDef>
	
<!--RAINBOW LASER-->
	
  <ResearchProjectDef Abstract="True" Name="MLRP_WeaponisedEOH">
    <baseCost>5000</baseCost>
    <techLevel>Industrial</techLevel>
	<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
	<requiredResearchFacilities>
		<li>MultiAnalyzer</li>
	</requiredResearchFacilities>
  </ResearchProjectDef>

	<ResearchProjectDef ParentName="MLRP_WeaponisedEOH">
		<defName>MLRP_WeaponisedElementsResearch</defName>
		<label>Rainbow Laser</label>
		<description>Turn plain old Elements of Harmony into awesome rainbow laser guns.</description>
		<prerequisites>
			<li>PrecisionRifling</li>
		</prerequisites>
		<tab>MLRP_ResearchTab</tab>
		<researchViewX>10</researchViewX>
		<researchViewY>0</researchViewY>
	</ResearchProjectDef>
	
<!--NIGHTMARE MOON AND DAYBREAKER-->

  <ResearchProjectDef Abstract="True" Name="MLRP_NMMResearch">
    <baseCost>7500</baseCost>
    <techLevel>Industrial</techLevel>
  </ResearchProjectDef>

	<ResearchProjectDef ParentName="MLRP_NMMResearch">
		<defName>MLRP_NightmareMoonResearch</defName>
		<label>Statues of the Evil Sisters</label>
		<description>Allows you to construct a statue of Nightmare Moon, who will grant you exotic items in exchange for chocolate, as well as a statue of Daybreaker, who will convert 100 of one material (or 1000 silver) into its market value equivalent of another.</description>
		<tab>MLRP_ResearchTab</tab>
		<prerequisites>
			<li>Cocoa</li>
			<li>BiofuelRefining</li>
		</prerequisites>
		<researchViewX>20</researchViewX>
		<researchViewY>0</researchViewY>
	</ResearchProjectDef>
	
<!--PLUSHIE RECYCLING-->
	
  <ResearchProjectDef Abstract="True" Name="MLRP_PlushieRecyclingBase">
    <baseCost>2500</baseCost>
    <techLevel>Industrial</techLevel>
	<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
  </ResearchProjectDef>

	<ResearchProjectDef ParentName="MLRP_PlushieRecyclingBase">
		<defName>MLRP_PlushieRecycling</defName>
		<label>Plushie recycling</label>
		<description>Learn new techniques which allow you to turn plushies back into 60% of the cloth used to make them. Also allows you to recover 10% of the gold used to make Elements of Harmony.</description>
		<tab>MLRP_ResearchTab</tab>
		<researchViewX>30</researchViewX>
		<researchViewY>0</researchViewY>
	</ResearchProjectDef>

</Defs>