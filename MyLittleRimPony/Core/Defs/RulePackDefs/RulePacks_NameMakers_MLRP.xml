<Defs>

<!--PAWN NAMES-->

    <RulePackDef>
		<!--MLP doesn't have a lot of male names, so we'll have to use a bunch of random ones-->
        <defName>NamerBrony</defName>
        <rulePack>
            <rulesStrings><!--r_name(p=12)-->
                <li>name->[PonyFirstName] [PonyLastName]</li>
                <li>name->[PonyLastName] [PonyFirstName]</li>
                <li>name->[MaleFirstName] [MaleLastName]</li>
                <li>name->[RandomWord] [MaleLastName]</li>
                <li>name->[MaleFirstName] [RandomWord]</li>
                <li>name->[MaleLastName] [MaleFirstName]</li>
				<li>name->[RandomWord] [RandomWord]</li> <!--Will more than likely generate some weird combinations-->
                <li>name->[MaleSingleName]</li>
				<!--Use what few male names we DO have where possible-->
                <li>name->Hitch Trailblazer</li>
                <li>name->Filthy Rich</li>
                <li>name->Big Macintosh</li>
                <li>name->Carrot Cake</li>
                <li>name->Pound Cake</li>
                <li>name->Hoity Toity</li>
                <li>name->Fancy Pants</li>
                <li>name->Bow Hothoof</li>
                <li>name->Bright Mac</li>
                <li>name->Night Light</li>
                <li>name->Iron Will</li>
                <li>name->Shining Armour</li>
                <li>name->Flash Magnus</li>
                <li>name->Flash Sentry</li>
                <li>name->Hondo Flanks</li>
                <li>name->Bulk Biceps</li>
                <li>name->Cheese Sandwich</li>
                <li>name->Party Favour</li>
                <li>name->Double Diamond</li>
                <li>name->Quibble Pants</li>
                <li>name->Sky Stinger</li>
                <li>name->Snap Shutter</li>
                <li>name->Sprout Cloverleaf</li>
				<!--Use some OC names too; contact me on Discord if you'd like yours added-->
				<li>name->Doctor Haywick</li>
				<li>name->Aquilla Hawkmoon</li>
				<li>name->Swirly Fungus</li>
				<li>name->SteelRhythm</li>
				<li>name->ChaosMauser</li>
            </rulesStrings>
            <rulesRaw>
                <li Class="Rule_File">
                    <keyword>PonyFirstName</keyword>
                    <path>NameBanks/PonyFirstNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>MaleFirstName</keyword>
                    <path>NameBanks/MaleFirstNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>PonyLastName</keyword>
                    <path>NameBanks/PonyLastNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>MaleLastName</keyword>
                    <path>NameBanks/MaleLastNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>MaleSingleName</keyword>
                    <path>NameBanks/MaleSingleNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>RandomWord</keyword>
                    <path>NameBanks/RandomWords</path>
                </li>
            </rulesRaw>
        </rulePack>
    </RulePackDef>
	
    <RulePackDef>
		<!--At least there are plenty of female names to use for female pawns.-->
        <defName>NamerBronyFemale</defName>
        <rulePack>
            <rulesStrings><!--r_name(p=12)-->
                <li>name->[FemaleFirstName] [FemaleLastName]</li>
                <li>name->[FemaleFirstName] [RandomWord]</li>
                <li>name->[FemaleLastName] [FemaleFirstName]</li>
                <li>name->[RandomWord] [FemaleLastName]</li>
                <li>name->[PonyFirstName] [FemaleLastName]</li>
                <li>name->[FemaleFirstName] [PonyLastName]</li>
				<li>name->[RandomWord] [RandomWord]</li> <!--Will more than likely generate some weird combinations-->
                <li>name->[FemaleSingleName]</li>
				<!--Use the names of Twilight and her friends as they are-->
				<li>name->Twilight Sparkle</li>
				<li>name->Rarity</li>
				<li>name->Rainbow Dash</li>
				<li>name->Applejack</li>
				<li>name->Fluttershy</li>
				<li>name->Pinkie Pie</li>
				<!--Same goes for the Cutie Mark Crusaders-->
				<li>name->Sweetie Belle</li>
				<li>name->Apple Bloom</li>
				<li>name->Scootaloo</li>
				<!--Use some OC names too; contact me on Discord if you'd like yours added-->
				<li>name->Nurse Haywick</li>
				<li>name->Amethyst Shade</li>
				<li>name->Hare</li>
				<li>name->Bubblegum Sparkle</li>
            </rulesStrings>
            <rulesRaw>
                <li Class="Rule_File">
                    <keyword>FemaleFirstName</keyword>
                    <path>NameBanks/FemaleFirstNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>FemaleLastName</keyword>
                    <path>NameBanks/FemaleLastNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>FemaleSingleName</keyword>
                    <path>NameBanks/FemaleSingleNames</path>
                </li>
                <li Class="Rule_File">
                    <keyword>RandomWord</keyword>
                    <path>NameBanks/RandomWords</path>
                </li>
            </rulesRaw>
        </rulePack>
    </RulePackDef>

<!--FACTION NAMES-->

  <RulePackDef>
    <defName>MLRP_BronyNames</defName>
    <rulePack>
      <rulesStrings>
		<li>r_name->Equestrian Crusaders</li>
		<li>r_name->[PonyThing] Crusaders</li>
        <li>r_name->New [PlaceName]</li>
		<li>r_name->Bastion of [PonyThing]</li>
		<li>r_name->Guardians of [PonyThing]</li>
		<li>r_name->Cult of [PonyThing]</li>
		<li>r_name->Sons of [PonyThing]</li>
		<li>r_name->Daughters of [PonyThing]</li>
		<li>r_name->Children of [PonyThing]</li>
		<li>r_name->Union of [PonyThing]</li>
		<li>r_name->Heralds of [PonyThing]</li>
		<li>r_name->The [PlaceName2] [PonyThing] [PonyUnit]</li>
      </rulesStrings>
	  <rulesRaw>
		<li Class="Rule_File">
			<keyword>PlaceName</keyword>
			<path>NameBanks/PlaceNames</path>
		</li>
		<li Class="Rule_File">
			<keyword>PlaceName2</keyword>
			<path>NameBanks/PlaceNames2</path>
		</li>
		<li Class="Rule_File">
			<keyword>PonyThing</keyword>
			<path>NameBanks/PonyThings</path>
		</li>
		<li Class="Rule_File">
			<keyword>PonyUnit</keyword>
			<path>NameBanks/UnitNames</path>
		</li>
	  </rulesRaw>
    </rulePack>
  </RulePackDef>
  
<!--SETTLEMENT NAMES-->

  <RulePackDef>
    <defName>MLRP_BronySettlementNames</defName>
    <rulePack>
      <rulesStrings>
		<li>r_name->[MLRP_SettlementName]</li>
      </rulesStrings>
	  <rulesRaw>
		<li Class="Rule_File">
			<keyword>MLRP_SettlementName</keyword>
			<path>NameBanks/MLRP_SettlementNames</path>
		</li>
	  </rulesRaw>
    </rulePack>
  </RulePackDef>
  
</Defs>