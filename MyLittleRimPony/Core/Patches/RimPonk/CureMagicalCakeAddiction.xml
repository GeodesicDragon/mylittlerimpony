<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>RimPonk</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<RecipeDef ParentName="SurgeryFlesh">
					<defName>MLRP_CureMagicalCakeAddiction</defName>
					<label>cure magical cake addiction</label>
					<description>Use industrial medicine to cure a person of an addiction to magical cake.</description>
					<workerClass>Recipe_RemoveHediff</workerClass>
					<jobString>Curing magical cake addiction.</jobString>
					<workAmount>2000</workAmount>
					<hideBodyPartNames>true</hideBodyPartNames>
					<isViolation>false</isViolation>
					<targetsBodyPart>false</targetsBodyPart>
					<removesHediff>MagicalCakeAddiction</removesHediff>
					<successfullyRemovedHediffMessage>{0} cured {1}'s magical cake addiction.</successfullyRemovedHediffMessage>
					<skillRequirements>
						<Medicine>8</Medicine>
					</skillRequirements>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>MedicineIndustrial</li>
								</thingDefs>
							</filter>
							<count>10</count>
						</li>
					</ingredients>
					<fixedIngredientFilter>
						<categories>
							<li>Medicine</li>
						</categories>
					</fixedIngredientFilter>
				</RecipeDef>
			</value>
		</match>
	</Operation>
 
</Patch>