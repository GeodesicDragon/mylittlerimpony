<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>A RimWorld of Magic</li>
    </mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName="MLRP_RecycleEOH"]/fixedIngredientFilter/disallowedThingDefs</xpath>
				<value>
					<li>PonyPlush_UnicornTwilight</li>
				</value>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName="MLRP_RecycleCMC"]/fixedIngredientFilter/disallowedThingDefs</xpath>
				<value>
					<li>PonyPlush_UnicornTwilight</li>
				</value>
			</li>
		</operations>
	</match>
</Operation>
	
</Patch>