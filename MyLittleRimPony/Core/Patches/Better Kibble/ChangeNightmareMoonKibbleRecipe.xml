<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Better Kibble</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName="MLRP_NMM_Kibble"]/ingredients</xpath>
					<value>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>Silver</li>
									</thingDefs>
								</filter>
								<count>6</count>
							</li>
						</ingredients>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName="MLRP_NMM_Kibble"]/description</xpath>
					<value>
						<description>Offer a meager amount of silver in exchange for kibble.</description>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>