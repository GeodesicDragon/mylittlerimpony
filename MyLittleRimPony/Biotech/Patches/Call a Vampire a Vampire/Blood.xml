<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Call a Vampire a Vampire</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName="MLRP_NMM_HemogenPack"]/label</xpath>
					<value>
						<label>request blood packs</label>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName="MLRP_NMM_HemogenPack"]/description</xpath>
					<value>
						<description>Offer silver in exchange for five blood packs.\n\nShould only be done as a last resort, as the cost is quite steep...</description>
					</value>
				</li>
							
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName="MLRP_NMM_DeathrestCapacitySerum"]/description</xpath>
					<value>
						<description>Offer silver and blood in exchange for a deathrest capacity serum.</description>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>