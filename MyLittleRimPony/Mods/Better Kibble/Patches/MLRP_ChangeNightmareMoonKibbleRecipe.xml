				<xpath>/Defs/RecipeDef[defName="MLRP_NMM_Kibble"]/ingredients</xpath>
				<value>
					<ingredients>
						<li>
							<filter>
								<thingDefs>
									<li>Silver</li>
								</thingDefs>
							</filter>
							<count>6</count>
