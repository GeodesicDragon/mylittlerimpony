<Patch>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/TraderKindDef[defName="MLRP_NPCFaction_ExoticGoodsTrader"]/stockGenerators</xpath>
		<value>
			<li Class="StockGenerator_SingleDef">
				<thingDef>IsolinearProcessor</thingDef>
				<countRange>1</countRange>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/TipSetDef[defName="MyLittleRimPony_Tips"]/tips</xpath>
		<value>
			<li>You cannot use MedPods to cure the Cutie Pox.</li>
			<li>The negative side effects of poison joke can be cured by a MedPod.</li>
			<li>MedPods will never remove the positive side effects of poison joke.</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="MedPodBedBase"]/comps/li[@Class="MedPod.CompProperties_TreatmentRestrictions"]/alwaysTreatableHediffs</xpath>
